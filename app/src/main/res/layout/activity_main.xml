<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/bg"
    android:backgroundTint="#80FFFFFF"
    android:backgroundTintMode="src_over">

    <ImageView
        android:id="@+id/imgLogin"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/log" />

    <EditText
        android:id="@+id/edtLoginEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:drawableRight="@drawable/emaill"
        android:ems="10"
        android:hint="Please enter an email address"
        android:inputType="textEmailAddress"
        android:textColor="#040303"
        android:textColorHint="#4E4E4E"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/edtLoginPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawableRight="@drawable/ilock"
        android:ems="10"
        android:hint="Please enter password"
        android:inputType="textPassword"
        android:textColor="#090909"
        android:textColorHint="#4E4E4E"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="#F46A99"
        android:text="LOGIN"
        android:textColor="#FFE6E6"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnLoginSignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#E66F98"
        android:text="SIGNUP"
        android:textColor="#F8F0F0"
        android:textSize="30sp" />

</LinearLayout>